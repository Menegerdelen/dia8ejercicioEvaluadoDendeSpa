<div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-4">
        <form action="/" method="post" class="py-5 text-center">
            <div class="mb-3 ">
                <label for="numeroConsulta" class="form-label">Ingrese cantidad de pacientes a solicitar:</label>
                <input type="number" class="form-control" id="numeroConsulta" name="numeroConsulta" 
                required min="1" oninput="this.value = Math.abs(this.value)" placeholder="Solo numeros del 1 al 50.">
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
    </div>
</div>
